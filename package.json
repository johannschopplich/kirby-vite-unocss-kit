{
  "prrivate": true,
  "scripts": {
    "uno": "unocss \"site/{layouts,snippets,templates}/**/*\" --out-file src/styles/uno.css",
    "dev": "shx touch src/.lock && concurrently \"npm run uno -- --watch\" \"vite\"",
    "build": "shx rm -f src/.lock && npm run uno && vite build",
    "lint": "eslint \"src/**/*.ts\" --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"src/**/*.{css,scss,ts}\" --write --ignore-path .gitignore"
  },
  "dependencies": {
    "@unocss/reset": "^0.22.6"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.0.14",
    "@types/node": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@unocss/preset-icons": "^0.22.6",
    "concurrently": "^7.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "shx": "^0.3.4",
    "unocss": "^0.22.6",
    "unocss-preset-typography": "^0.4.0",
    "vite": "^2.7.13",
    "vite-plugin-full-reload": "^1.0.0"
  }
}
